<div class="m-3">
  <%= render "restaurants/partials/card", restaurant: @restaurant %>
</div>
<div>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li><%= review.content %> <% review.rating.times do %>
        <i class="fa-regular fa-star"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
<div class="container">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: 0..5 %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
    <%= link_to "Back to list", restaurants_path(@restaurants), class:"btn btn-primary" %>
  <% end %>
</div>
